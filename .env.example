# Пример файла переменных окружения для телеграм-бота
# Скопируйте этот файл в .env и заполните реальными значениями

# ОБЯЗАТЕЛЬНЫЕ НАСТРОЙКИ
BOT_TOKEN=123456789:ВАШ_ТОКЕН_ЗДЕСЬ
ADMIN_IDS=123456789,987654321
DEVELOPER_CHAT_ID=123456789

# API КЛЮЧИ (опционально)
OPENWEATHER_API_KEY=ваш_ключ_погоды_здесь
NEWS_API_KEY=ваш_ключ_новостей_здесь
OPENAI_API_KEY=ваш_ключ_openai_здесь

# НАСТРОЙКИ ФУНКЦИЙ
ENABLE_DEVELOPER_NOTIFICATIONS=true
ENABLE_AI_ERROR_PROCESSING=true
LOG_LEVEL=INFO

# БАЗА ДАННЫХ
DATABASE_URL=telegram_bot.db

# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
MAX_GAME_SESSIONS=50
PROFANITY_FILTER_ENABLED=true
AUTO_DELETE_PROFANITY=true
SCHEDULER_ENABLED=true